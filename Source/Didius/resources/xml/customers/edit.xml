<sui elementheight="40px">
	<layoutbox type="horizontal">			
		<panel tag="content" size="*">
			<tabview >
				<tab label="Detaljer" selected="true">
					<layoutbox type="horizontal" height="33%">			
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Name"/>
								</panel>					
								<panel size="*">
									<textbox tag="name" width="100%" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Address"/>
								</panel>					
								<panel size="*">
									<textbox tag="address1" width="100%" />
								</panel>					
							</layoutbox>
						</panel>	
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
								</panel>					
								<panel size="*">
									<textbox tag="address1" width="100%" />
								</panel>					
							</layoutbox>
						</panel>												
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Post nr."/>
								</panel>					
								<panel size="100px">
									<textbox tag="address1" width="100%" />
								</panel>					
								<panel size="100px">
									<label text="By"/>
								</panel>					
								<panel size="*">
									<textbox tag="address1" width="100%" />
								</panel>					
							</layoutbox>
						</panel>	
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Land"/>
								</panel>					
								<panel size="*">
									<textbox tag="address1" width="100%" />
								</panel>					
							</layoutbox>
						</panel>												
					</layoutbox>
					
					<layoutbox type="horizontal" height="33%">			
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Email"/>
								</panel>					
								<panel size="*">
									<textbox tag="name" width="100%" />
								</panel>					
							</layoutbox>
						</panel>														
					</layoutbox>					

					<layoutbox type="horizontal" height="33%">			
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Bank"/>
								</panel>					
								<panel size="*">
									<textbox tag="name" width="100%" />
								</panel>					
							</layoutbox>
						</panel>
						<panel size="%elementheight%">
							<layoutbox type="vertical">
								<panel size="100px">
									<label text="Reg. nr."/>
								</panel>					
								<panel size="100px">
									<textbox tag="address1" width="100%" />
								</panel>					
								<panel size="100px">
									<label text="Konto nr."/>
								</panel>					
								<panel size="*">
									<textbox tag="address1" width="100%" />
								</panel>					
							</layoutbox>
						</panel>																					
					</layoutbox>					

				</tab>
				<tab label="Sager">
					<layoutbox type="horizontal">					
						<panel size="*">													
							<layoutbox type="vertical">
								<panel size="*">
									<listview tag="fields" width="100%" height="100%">
										<column tag="id" />
										<column tag="name" label="Name" width="200px" visible="true" />
										<column tag="type" label="Type" width="200px" visible="true" />									
										<column tag="options" />												
									</listview>
								</panel>					
								<panel size="80px">
									<layoutbox type="horizontal" width="100%" height="100%" stylesheet="SUILayoutboxNoBorder">
										<panel size="*">
											<button tag="fieldadd" width="100%" label="Opret" />
											<button tag="fieldedit" width="100%" label="Redigere" disabled="true" />
											<button tag="fieldremove" width="100%" label="Slet" disabled="true" />
										</panel>										
									</layoutbox>																									
								</panel>
							</layoutbox>														
						</panel>
					</layoutbox>			
				</tab>
				<tab label="Notat">
					<textarea tag="notes" />
				</tab>				
			</tabview>		
		</panel>
	
		<panel tag="buttons" size="%elementheight%">			
			<layoutbox type="vertical">
				<panel size="*"/>
				<panel size="300px">
					<button tag="close" width="50%" label="Luk" />
					<button tag="save" width="50%" label="Gem" disabled="true" />					
				</panel>				
			</layoutbox>
		</panel>	
	</layoutbox>
</sui>



